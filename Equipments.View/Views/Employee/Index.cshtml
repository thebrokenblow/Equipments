@using Equipments.Application.Common
@using Equipments.Domain.QueryModels.Employees

@model PagedResult<EmployeeModel>

@{
    ViewData["Title"] = "Сотрудники";

    var statusInactiveButton = "disabled";
    var statusSelectedPage = "active";

    var pageSizeOptions = new[] { 10, 25, 50, 100 };
    var currentPageSize = Model.PageSize;
}

<style>
    .table {
        font-size: 15px;
        border-collapse: collapse;
    }

    .table tbody tr {
        line-height: 1.2;
        margin: 0;
        padding: 0;
    }

    .table td, .table th {
        padding: 2px 4px;
        margin: 0;
     }
</style>

<h1>Сотрудники</h1>

<!-- Форма поиска -->
<form method="get" asp-action="Index" asp-controller="Employee" class="row g-3 mb-4 align-items-end mt-2">
    <div class="col-md-3">
        <div class="row align-items-center">
            <div class="col-auto">
                <label for="pageSize" class="col-form-label">Записей на странице:</label>
            </div>
            <div class="col">
                <select class="form-select" id="pageSize" name="pageSize">
                    @foreach (var option in pageSizeOptions)
                    {
                        <option value="@option" selected="@(currentPageSize == option)">@option</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <button type="submit" class="btn btn-primary me-2">Отобразить</button>
    </div>
</form>

@if (Model.Items.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Фамилия и инициалы
                </th>
                <th>
                    Наименование подразделения
                </th>
                <th>
                    Примечание
                </th>
                @if (User.Identity!.IsAuthenticated)
                {
                    <th>
                        Действия
                    </th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Items)
            {
                <tr>
                    <td>
                        @employee.SurnameAndInitials
                    </td>
                    <td>
                        @employee.SubdivisionName
                    </td>
                    <td>
                        @employee.Note
                    </td>
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <td>
                            <a asp-controller="Employee" asp-action="Edit" asp-route-employeeId="@employee.Id">Редактировать</a> |
                            <a asp-controller="Employee" asp-action="Delete" asp-route-employeeId="@employee.Id">Удалить</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>По вашему запросу ничего не найдено</h2>
}

@if (Model.TotalPages > 0)
{
    <nav>
        <ul class="pagination">
            <li class="page-item @(!Model.HasPreviousPage ? statusInactiveButton : string.Empty)">
                <a asp-action="Index" asp-controller="Employee"
                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                   asp-route-pageSize="@currentPageSize"
                   class="page-link" aria-label="Предыдущая">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int pageNumber = 1; pageNumber <= Model.TotalPages; pageNumber++)
            {
                <li class="page-item @(Model.PageNumber == pageNumber ? statusSelectedPage : string.Empty)" style="cursor: pointer">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNumber="@pageNumber"
                       asp-route-pageSize="@currentPageSize"
                       aria-label="@pageNumber">
                        @pageNumber
                    </a>
                </li>
            }
            <li class="page-item @(!Model.HasNextPage ? statusInactiveButton : string.Empty)">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                   asp-route-pageSize="@currentPageSize"
                   aria-label="Следующая">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
}

@if (User.Identity!.IsAuthenticated)
{
    <!-- Форма добавления нового сотрудника -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Добавить нового сотрудника</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Create" asp-controller="Employee" class="row g-3">
                <div class="col-md-3">
                    <label for="LastName" class="form-label">Фамилия и инициалы *</label>
                    <input type="text" class="form-control" id="SurnameAndInitials" name="SurnameAndInitials" required>
                </div>
                <div class="col-md-3">
                    <label for="CabinetNumber" class="form-label">Подразделение</label>
                    <input type="text" class="form-control" id="SubdivisionName" name="SubdivisionName">
                </div>
                <div class="col-md-3">
                    <label for="CabinetNumber" class="form-label">Примечание</label>
                    <input type="text" class="form-control" id="Note" name="Note">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-success">Добавить сотрудника</button>
                </div>
            </form>
        </div>
    </div>
}