@using Equipments.Domain.Entities
@model TypeEquipment

<!-- Форма редактирования объекта -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Редактирование типа оборудования</h5>
    </div>
    <div class="card-body">
        <form method="post" asp-controller="TypeEquipment" asp-action="Edit" class="row g-3">
            <input type="hidden"
                   class="form-control"
                   value="@Model.Id"
                   id="@nameof(TypeEquipment.Id)"
                   name="@nameof(TypeEquipment.Id)">
            <div class="col-md-3">
                <label class="form-label">Наименование *</label>
                <input type="text"
                       class="form-control"
                       value="@Model.Name"
                       id="@nameof(TypeEquipment.Id)"
                       name="@nameof(TypeEquipment.Name)"
                       required>
            </div>
            <div class="d-flex gap-2">
                <button type="submit"
                        class="btn btn-success">Редактировать</button>
                <a asp-controller="TypeEquipment"
                   asp-action="Index"
                   class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Назад к списку
                </a>
            </div>
        </form>
    </div>
</div>