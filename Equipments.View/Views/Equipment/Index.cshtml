@using Equipments.Domain.Entities
@using Equipments.View.ViewModel

@model EquipmentIndexViewModel

@{
    ViewData["Title"] = "Оборудование";

    var statusInactiveButton = "disabled";
    var statusSelectedPage = "active";
}

<h1>Оборудование</h1>

<!-- Форма поиска -->
<form method="get" asp-action="Index" asp-controller="Equipment" class="row g-3 mb-4 align-items-end mt-2">
    <div class="col-md-4">
        <div class="row align-items-center">
            <input type="hidden" value="@Model.EquipmentFilterModel.FacilityId" class="form-control" id="facilityId" name="facilityId">
            <div class="col-auto">
                <label for="cabinetNumber" class="col-form-label">Номер кабинета:</label>
            </div>
            <div class="col">
                <input type="text" class="form-control" id="cabinetNumber" name="cabinetNumber"
                       value="@Model.EquipmentFilterModel.CabinetNumber">
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="row align-items-center">
            <div class="col-auto">
                <label for="serialNumber" class="col-form-label">Серийный номер:</label>
            </div>
            <div class="col">
                <input type="text" class="form-control" id="serialNumber" name="serialNumber"
                       value="@Model.EquipmentFilterModel.SerialNumber">
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <button type="submit" class="btn btn-primary me-2">Найти</button>
    </div>
</form>

@if (Model.PagedEquipments.Items.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Номер кабинета
                </th>
                <th>
                    Тип оборудования
                </th>
                <th>
                    Серийный номер
                </th>
                <th>
                    Ответственное лицо
                </th>
                <th>
                    Заключение о СП
                </th>
                <th>
                    Заключение о СИ
                </th>
                <th>
                    Примечание
                </th>
                <th>
                    Действия
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var equipment in Model.PagedEquipments.Items)
            {
                <tr>
                    <td>
                        @equipment.CabinetNumber
                    </td>
                    <td>
                        @equipment.TypeEquipment
                    </td>
                    <td>
                        @equipment.SerialNumber
                    </td>
                    <td>
                        @equipment.SurnameAndInitials
                    </td>
                    <td>
                        @equipment.ConclusionSpecialProject
                    </td>
                    <td>
                        @equipment.ConclusionSpecResearch
                    </td>
                    <td>
                        @equipment.Note
                    </td>
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <td>
                            <a asp-action="Edit" asp-route-equipmentId="@equipment.Id" asp-route-facilityId="@Model.EquipmentFilterModel.FacilityId">Редактировать</a> |
                            <a asp-controller="Equipment" asp-action="Delete" asp-route-equipmentId="@equipment.Id" asp-route-facilityId="@Model.EquipmentFilterModel.FacilityId">Удалить</a> |
                            <a asp-controller="Equipment" asp-action="Duplicate" asp-route-equipmentId="@equipment.Id" asp-route-facilityId="@Model.EquipmentFilterModel.FacilityId">Дублировать</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>По вашему запросу ничего не найдено</h2>
}

@if (Model.PagedEquipments.TotalPages > 0)
{
    <nav>
        <ul class="pagination">
            <li class="page-item @(!Model.PagedEquipments.HasPreviousPage ? statusInactiveButton : string.Empty)">
                <a asp-action="Index" asp-controller="Equipment"
                   asp-route-pageNumber="@(Model.PagedEquipments.PageNumber - 1)"
                   asp-route-facilityId="@Model.EquipmentFilterModel.FacilityId"
                   asp-route-cabinetNumber="@Model.EquipmentFilterModel.CabinetNumber"
                   asp-route-serialNumber="@Model.EquipmentFilterModel.SerialNumber"
                   class="page-link" aria-label="Предыдущая">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int pageNumber = 1; pageNumber <= Model.PagedEquipments.TotalPages; pageNumber++)
            {
                <li class="page-item @(Model.PagedEquipments.PageNumber == pageNumber ? statusSelectedPage : string.Empty)" style="cursor: pointer">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNumber="@pageNumber"
                       asp-route-facilityId="@Model.EquipmentFilterModel.FacilityId"
                       asp-route-cabinetNumber="@Model.EquipmentFilterModel.CabinetNumber"
                       asp-route-serialNumber="@Model.EquipmentFilterModel.SerialNumber"
                       aria-label="@pageNumber">
                        @pageNumber
                    </a>
                </li>
            }
            <li class="page-item @(!Model.PagedEquipments.HasNextPage ? statusInactiveButton : string.Empty)">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-facilityId="@Model.EquipmentFilterModel.FacilityId"
                   asp-route-pageNumber="@(Model.PagedEquipments.PageNumber + 1)"
                   asp-route-cabinetNumber="@Model.EquipmentFilterModel.CabinetNumber"
                   asp-route-serialNumber="@Model.EquipmentFilterModel.SerialNumber"
                   aria-label="Следующая">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
}

@if (User.Identity!.IsAuthenticated)
{
    <!-- Форма добавления нового оборудования -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Добавить новое оборудование</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Create" asp-controller="Equipment" class="row g-3">
                <input type="hidden" value="@Model.EquipmentFilterModel.FacilityId" class="form-control" id="FacilityId" name="FacilityId">
                <div class="col-md-3">
                    <label for="SerialNumber" class="form-label">Серийный номер *</label>
                    <input type="text" class="form-control" id="SerialNumber" name="SerialNumber" required>
                </div>
                <div class="col-md-3">
                    <label for="CabinetNumber" class="form-label">Номер кабинета *</label>
                    <input type="text" class="form-control" id="CabinetNumber" name="CabinetNumber" required>
                </div>
                <div class="col-md-3">
                    <label for="TypeEquipmentId" class="form-label">Тип оборудования *</label>
                    <select class="form-select" name="TypeEquipmentId" asp-items="@Model.TypesEquipmentsSelectList" required>
                        <option value="">Выберите тип</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="EmployeeId" class="form-label">Ответственное лицо</label>
                    <select class="form-select" name="EmployeeId" asp-items="@Model.EmployeesSelectList">
                        <option value="null">Пока нет сотрудника</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="ConclusionSpecialProject" class="form-label">Заключение о СП</label>
                    <input type="text" class="form-control" id="ConclusionSpecialProject" name="ConclusionSpecialProject">
                </div>
                <div class="col-md-6">
                    <label for="ConclusionSpecResearch" class="form-label">Заключение о СИ</label>
                    <input type="text" class="form-control" id="ConclusionSpecResearch" name="ConclusionSpecResearch">
                </div>
                <div class="col-12">
                    <label for="Note" class="form-label">Примечание</label>
                    <textarea class="form-control" id="Note" name="Note" rows="2"></textarea>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-success">Добавить оборудование</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Форма нового типа оборудования -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Добавить новый тип оборудования</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Create" asp-controller="TypeEquipment" class="row g-3">
                <input type="hidden" value="@Model.EquipmentFilterModel.FacilityId" class="form-control" id="facilityId" name="facilityId">
                <div class="col-md-3">
                    <label class="form-label">Наименование *</label>
                    <input type="text" class="form-control" id="@nameof(TypeEquipment.Name)" name="@nameof(TypeEquipment.Name)" required>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-success">Добавить тип оборудования</button>
                </div>
            </form>
        </div>
    </div>
}